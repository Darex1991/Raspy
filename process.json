{
  "apps" : [
    {
      "name": "Raspbot",
      "cwd": "raspbot",
      "script": "server.js",
      "env_development": {
        "NODE_ENV": "development"
      },
      "watch": ["raspbot"],
      "ignore_watch" : ["node_modules", "web"],
      "watch_options": {
        "followSymlinks": false
      },
      "env" : {
        "NODE_ENV": "production"
      }
    },
    {
      "name": "Bootstrapper",
      "cwd": "bootstrapper",
      "script": "app.js",
      "env_development": {
        "NODE_ENV": "development"
      },
      "watch": ["bootstrapper"],
      "ignore_watch" : ["node_modules", "web/node_modules"],
      "watch_options": {
        "followSymlinks": false
      },
      "env" : {
        "NODE_ENV": "production"
      }
    }
  ]
}
